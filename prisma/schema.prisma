// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  USER
  ADMIN
}

model User {
  id Int @id @default(autoincrement())
  role Role @default(USER)
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
  passwordHash String
}


